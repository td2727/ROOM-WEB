<style>
  .footer{
    background:#0b0b0c;
    color:#fff;
    padding: 54px 16px;
    border-top: 1px solid rgba(255,255,255,.10);
  }

  .wrap{
    max-width: 1280px;
    margin: 0 auto;
    display:flex;
    align-items:center;
    justify-content:space-between;
    gap: 28px;
  }

  .left{
    font-weight:700;
    letter-spacing:.9px;
    font-size: 15px;
    line-height: 1.7;
    text-transform: uppercase;
  }

  .mid{
    display:flex;
    gap: 28px;
    font-size: 13px;
    align-items:center;
  }

  .mid a{
    color:#fff;
    text-decoration:none;
    opacity:.9;
    text-transform: lowercase;
    padding: 6px 4px;
    border-radius: 6px;
  }

  .mid a:hover{
    opacity:1;
    background: rgba(255,255,255,.06);
  }

  .contact .phone{
    margin-left: 8px;
    font-weight: 800;
    opacity: .95;
  }

  .right{
    display:flex;
    gap: 12px;
    align-items:center;
  }

  .ico{
    width: 28px;
    height: 28px;
    border-radius: 50%;
    border: 1px solid rgba(255,255,255,.45);
    display:grid;
    place-items:center;
    opacity:.95;
    text-decoration:none;
    transition: transform .15s ease, background .15s ease, border-color .15s ease;
  }

  .ico svg{
    width: 14px;
    height: 14px;
    fill:#fff;
    opacity: .95;
  }

  .ico:hover{
    transform: translateY(-1px);
    background: rgba(255,255,255,.06);
    border-color: rgba(255,255,255,.75);
  }

  @media (max-width: 900px){
    .wrap{
      flex-direction:column;
      align-items:flex-start;
    }
    .mid{ flex-wrap:wrap; }
  }
</style>
