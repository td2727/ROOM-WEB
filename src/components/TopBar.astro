---
const MAPS_URL = "https://maps.app.goo.gl/ptK9LFwSxjtwNGYT6?g_st=ic";
const PHONE_TEL = "+59177120636";
---

<header class="topbar">
  <!-- MENÚ CENTRADO REAL -->
  <nav class="nav">
    <a href="#services">Services</a>

    <a href={MAPS_URL} target="_blank" rel="noopener">
      Ubicacion
    </a>

    <a href={`tel:${PHONE_TEL}`}>
      Contacto
    </a>
  </nav>

  <!-- BOTÓN DERECHO -->
  <a class="cta"
     href={`poner link aqui`}
     target="_blank"
     rel="noopener">
    llenar orden
  </a>
</header>

<style>
  .topbar{
  position: relative;                     /* CLAVE */
  width:100%;
  height:150px;
  background: url("/images/topbar-bg.png") center / cover no-repeat;
}

/* MENÚ CENTRADO ABSOLUTO */
.nav{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);       /* CENTRO REAL */
  display:flex;
  gap:28px;
}

/* LINKS NEGROS */
.nav a{
  color:#000;
  text-decoration:none;
  font-size:13px;
  font-weight:500;
  padding:6px 10px;
  border-radius:6px;
  background: rgba(255,255,255,.7);
}

.nav a:hover{
  background: rgba(255,255,255,.9);
}

/* BOTÓN FIJO DERECHA */
.cta{
  position:absolute;
  right:32px;
  top:50%;
  transform: translateY(-50%);
  background:#ff6a00;
  color:#111;
  padding:10px 18px;
  border-radius:8px;
  font-weight:700;
  font-size:12px;
  text-decoration:none;
  box-shadow: 0 6px 16px rgba(0,0,0,.35);
}

.cta:hover{
  filter: brightness(1.05);
}

/* RESPONSIVE */
@media (max-width: 900px){
  .topbar{ height: 70px; }
  .cta{
    right: 14px;
    padding: 8px 12px;
    font-size: 11px;
  }
}


</style>
